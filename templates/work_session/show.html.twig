{% extends 'base.html.twig' %}

{% block title %}WorkSession{% endblock %}

{% block body %}
    <h1>WorkSession</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ work_session.id }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ work_session.startDate ? work_session.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ work_session.endDate ? work_session.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Comments</h2>
    <ul>
        {% for comment in work_session.comments %}
            <li>{{ comment.content }} - {{ comment.author }} - {{ comment.createdAt|date('Y-m-d H:i:s') }}</li>

        {% endfor %}
    </ul>

    {{form(form)}}
    
    

    <a href="{{ path('app_work_session_index') }}">back to list</a>
    <a href="{{ path('app_work_session_edit', {'id': work_session.id}) }}">edit</a>

    {{ include('work_session/_delete_form.html.twig') }}
{% endblock %}
