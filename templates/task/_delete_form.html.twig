<form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="mt-4">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-full hover:bg-red-700 transition duration-300">
        <i class="fas fa-trash-alt"></i> Supprimer
    </button>
</form>
