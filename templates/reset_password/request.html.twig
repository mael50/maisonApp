{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="bg-red-500 text-white p-4 mb-4">{{ flash_error }}</div>
    {% endfor %}
    
    <div class="max-w-md mx-auto my-8 bg-white p-8 rounded-md shadow-md">
        <h1 class="text-3xl font-bold mb-6">Réinitialiser votre mot de passe</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email, { 'attr': { 'class': 'form-input w-full mb-4 p-3 border border-gray-300 rounded', 'placeholder': 'Adresse e-mail' } }) }}

            <div class="mb-4">
                <small class="text-gray-600">
                    Entrez votre adresse e-mail, et nous vous enverrons un lien
                    pour réinitialiser votre mot de passe.
                </small>
            </div>

            <button class="bg-blue-500 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition duration-300">
                Envoyer l'e-mail de réinitialisation
            </button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
